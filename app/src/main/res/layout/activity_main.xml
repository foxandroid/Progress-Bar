<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/design1btn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/design2btn"
        android:backgroundTint="@color/black"
        android:text="Design 1"/>


    <Button
        android:id="@+id/design2btn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/viewdemo"
        android:backgroundTint="@color/black"
        android:text="Design 2"/>

    <View
        android:id="@+id/viewdemo"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true" />


    <Button
        android:id="@+id/design3btn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/viewdemo"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black"
        android:text="Design 3"/>

    <Button
        android:id="@+id/design4btn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/design3btn"
        android:backgroundTint="@color/black"
        android:text="Design 4"/>





</RelativeLayout>